<Window x:Class="NotepadApp.Views.Dialogs.ReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заменить" Height="180" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding FindLabel}" Margin="0,0,0,2"/>
        <TextBox Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
        <TextBlock Text="{Binding ReplaceLabel}" Margin="0,5,0,2"/>
        <TextBox Text="{Binding ReplaceText, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
