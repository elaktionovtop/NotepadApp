<Window x:Class="NotepadApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Height="450" 
        Title="{Binding Document.Title,
                UpdateSourceTrigger=PropertyChanged}"
        Width="800"
        >
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Delete"
                    Executed="Delete_Executed"
                    CanExecute="Delete_CanExecute"/>
    </Window.CommandBindings>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Новый" 
                          Command="{Binding FileVM.NewCommand}" />
                <MenuItem Header="_Открыть" 
                          Command="{Binding FileVM.OpenCommand}" />
                <MenuItem Header="_Сохранить" 
                          Command="{Binding FileVM.SaveCommand}"/>
                <MenuItem Header="Сохранить _как" 
                          Command="{Binding FileVM.SaveAsCommand}"/>
                <Separator />
                <MenuItem Header="В_ыход" 
                          Command="{Binding FileVM.ExitCommand}" />
            </MenuItem>
            
            <MenuItem Header="_Правка">
                <MenuItem Header="Отменить"
                          Command="ApplicationCommands.Undo"/>
                <MenuItem Header="_Повторить"
                          Command="ApplicationCommands.Redo"/>
                <Separator/>
                <MenuItem Header="Вырезать"
                          Command="ApplicationCommands.Cut"/>
                <MenuItem Header="Копировать"
                          Command="ApplicationCommands.Copy"/>
                <MenuItem Header="Вставить"
                          Command="ApplicationCommands.Paste"/>
                <MenuItem Header="Удалить" 
                          Command="ApplicationCommands.Delete"/>
                <Separator/>
                <MenuItem Header="Выделить _всё" 
                          Command="ApplicationCommands.SelectAll"/>
                <Separator/>
                <MenuItem Header="_Найти" 
                          Command="{Binding EditVM.FindCommand}"/>
                <MenuItem Header="Найти _далее" 
                          Command="{Binding EditVM.FindNextCommand}"/>
                <MenuItem Header="Найти _ранее" 
                          Command="{Binding EditVM.FindPreviousCommand}"/>
                <MenuItem Header="_Заменить" 
                          Command="{Binding EditVM.ReplaceDialogCommand}"/>
                <MenuItem Header="П_ерейти" 
                          Command="{Binding EditVM.GoToLineDialogCommand}"/>
                <Separator/>
                <MenuItem Header="_Дата, время" 
                          Command="{Binding EditVM.InsertDateTimeCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основное текстовое поле -->
        <TextBox x:Name="text"
                 Text="{Binding Document.Text,
                        UpdateSourceTrigger=PropertyChanged}" 
                 AcceptsReturn="True" 
                 AcceptsTab="True" 
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
